{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "removeComments": false,
        "noImplicitAny": false,
        "lib": ["es6", "es2016.array.include"],
        "types" : [ "node", "express" ],
        "outDir": "dist/",
        "rootDir": ".",
        "resolveJsonModule": true,
        "baseUrl": "./api",
        "paths": {
            "controllers*": ["controllers*"],
            "models*": ["models*"],
            "routes*": ["routes*"],
            "services*": ["services*"],
            "tests*": ["tests*"],
        }
    },
    "include": ["./api/**/*"],
}
